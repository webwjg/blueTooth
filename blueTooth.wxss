/* pages/blueTooth/blueTooth.wxss */
.bt-nav{
	width:100%;
	height:100rpx;
	text-align: center;
	line-height: 100rpx;
	border-bottom: 6rpx solid rgb(209, 207, 207);
	margin-bottom: 20rpx;
}
.bt-ready{
	width:100%;
	height:100rpx;
	text-align: center;
}
.bt-news{
	margin-top:25rpx;
}

.list-item{
	height:500rpx;
	overflow: scroll;
}
.item-box{
	width:100%;
	padding: 8rpx 10%;
	height:100rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	border-bottom: 1px solid rgb(219, 219, 219);
}
.btn-connection{
	width:100rpx;
	height:60rpx;  
	text-align: center;
	line-height:60rpx;
	color:#06ae56;
	border: 1rpx solid rgb(219, 219, 219);
	background-color: #eee;
	border-radius: 2rpx;
   
}

.connect-success{
	margin-top:30rpx;
	padding: 8rpx 10%;
	
}
.show-news{
	text-align: left;
	font-size: 27rpx;
	font-weight: 600;
}
.write-data{
	width: 100%;
	margin:15rpx 0;
	text-align: center;
}
.write-data>.write-btn{
	font-size: 30rpx;
	padding: 6rpx 30rpx;
}
.closeBLEConnection-box{
	width: 100%;
	text-align: center;
}
.closeBLEConnection-box>.closeBLEConnection{
	font-size: 30rpx;
	padding: 6rpx 30rpx;
}